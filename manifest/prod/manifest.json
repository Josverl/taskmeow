  "staticTabs": [
    {
      "contentUrl": "https://taskmeow.com/?inTeams=true",
      "entityId": "myTasks",
      "name": "My Tasks",
      "scopes": [
        "personal"
      ]
    },
    {
      "contentUrl": "https://taskmeow.com/profile/?inTeams=true",
      "entityId": "myProfile",
      "name": "My Profile",
      "scopes": [
        "personal"
      ]
    },
    {
      "contentUrl": "https://taskmeow.com/?inTeams=true",
      "entityId": "teamTasks",
      "name": "Team Tasks",
      "scopes": [
        "team"
      ]
    }
  ],
  "bots": [
    {
      "botId": "36b1586d-b1da-45d2-9b32-899c3757b6f8",
      "scopes": [
        "personal"
      ]
    }
  ],
  "permissions": [
    "messageTeamMembers",
    "identity"
  ],
  "validDomains": [
    "taskmeow.com"
  ]
